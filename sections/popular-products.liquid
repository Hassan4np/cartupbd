<div class="popular-product py-5 lg:py-8 xl:py-10 2xl:py-12.5">
  <div class="container">
    <div class="flex items-center justify-between gap-2 mb-5 lg:mb-7 xl:mb-10">
      <h2 class="text-2xl lg:text-[32px] font-bold text-heading">{{ section.settings.section_title }}</h2>
      <div>
        <!-- Tab Buttons -->
        <div class="flex items-center gap-4 lg:gap-5">
          <button
            class="tab-btn text-base md:text-lg text-heading cursor-pointer text-secondary hover:text-secondary duration-300 font-bold active"
            data-tab="all"
          >
            All
          </button>
          {% for block in section.blocks %}
            <button
              class="tab-btn text-base md:text-lg text-heading cursor-pointer hover:text-secondary duration-300 font-bold"
              data-tab="tab-{{ forloop.index }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.tab_title }}
            </button>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Tab Contents -->
    <div>
      <!-- All Products Tab -->
      <div id="all" class="tab-content">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 lg:gap-5 xl:gap-6">
          {% for product in collections.all.products limit: 10 %}
            {% render 'product-card', product: product %}
          {% else %}
            <p class="text-red-500">No products found in All Products</p>
          {% endfor %}
        </div>
      </div>

      <!-- Collection Tabs -->
      {% for block in section.blocks %}
        <div id="tab-{{ forloop.index }}" class="tab-content hidden">
          <!-- Debug Info -->
          <div class="bg-yellow-100 p-4 mb-4 text-sm">
            <p><strong>Debug Info:</strong></p>
            <p>Collection Handle: {{ block.settings.collection.handle }}</p>
            <p>Collection Title: {{ block.settings.collection.title }}</p>
            <p>Product Count: {{ collections[block.settings.collection.handle].products.size }}</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 lg:gap-5 xl:gap-6">
            {% if block.settings.collection != blank %}
              {% assign selected_collection = collections[block.settings.collection.handle] %}
              
              {% if selected_collection.products.size > 0 %}
                {% for product in selected_collection.products limit: 10 %}
                  {% render 'product-card', product: product %}
                {% endfor %}
              {% else %}
                <p class="text-red-500">This collection has no products</p>
              {% endif %}
            {% else %}
              <p class="text-orange-500">Please select a collection from theme customizer</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        // Reset all buttons
        tabButtons.forEach((b) => {
          b.classList.remove('text-secondary', 'active');
        });
        
        // Hide all contents
        tabContents.forEach((content) => content.classList.add('hidden'));
        
        // Activate current button
        btn.classList.add('text-secondary', 'active');
        
        // Show current content
        const targetTab = document.getElementById(btn.dataset.tab);
        if (targetTab) {
          targetTab.classList.remove('hidden');
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "Popular Products",
  "tag": "section",
  "class": "popular-products-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Popular Products"
    }
  ],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Collection Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Category Name"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Popular Products",
      "blocks": [
        {
          "type": "collection_tab",
          "settings": {
            "tab_title": "Milks & Dairies"
          }
        },
        {
          "type": "collection_tab",
          "settings": {
            "tab_title": "Coffees & Teas"
          }
        }
      ]
    }
  ],
  "max_blocks": 5
}
{% endschema %}