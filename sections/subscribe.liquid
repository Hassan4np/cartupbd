<div class="subscribe py-5 lg:py-7 xl:py-12.5">
  <div class="container">
    <div class="flex items-center justify-between gap-5 rounded-xl lg:rounded-[20px] px-5 md:px-7 lg:px-9 xl:px-12.5 bg-[#D8F1E5] relative overflow-hidden">
      {%- if section.settings.bg_image != blank -%}
        <img
          src="{{ section.settings.bg_image | image_url: width: 1600 }}"
          alt="Background"
          class="absolute inset-0 size-full object-cover -z-10"
          width=""
          height=""
        >
      {%- endif -%}

      <!-- LEFT CONTENT -->
      <div class="w-5/12">
        <h2 class="text-heading text-2xl lg:text-3xl xl:text-[40px] font-bold mb-4 lg:mb-5">
          {{ section.settings.heading }}
        </h2>

        <p class="text-gray text-lg lg:text-xl mb-5">
          {{ section.settings.description }}
          <span class="text-secondary font-semibold">
            {{ section.settings.highlight_text }}
          </span>
        </p>

        <!-- NEWSLETTER FORM -->
        {% form 'customer', class: 'max-w-118 bg-white rounded-full pl-4 lg:pl-5 min-h-16 flex items-center relative' %}
          <input type="hidden" name="contact[tags]" value="newsletter">

          <input
            type="email"
            name="contact[email]"
            required
            class="text-sm md:text-base text-heading placeholder:text-heading font-semibold w-full py-4 px-4 lg:px-5 outline-0 bg-transparent"
            placeholder="{{ section.settings.placeholder }}"
          >

          <button
            type="submit"
            class="btn min-h-16 rounded-full duration-300"
          >
            {{ section.settings.button_text }}
          </button>
        {% endform %}

        {% if form.posted_successfully? %}
          <p class="text-green-600 mt-3 font-medium">âœ… Successfully subscribed!</p>
        {% endif %}

        {% if form.errors %}
          <p class="text-red-600 mt-3 font-medium">
            {{ form.errors | default_errors }}
          </p>
        {% endif %}
      </div>

      <!-- RIGHT IMAGE -->
      <div class="w-5/12 h-75 lg:h-86">
        {% if section.settings.side_image != blank %}
          <img
            src="{{ section.settings.side_image | image_url: width: 800 }}"
            alt="Subscribe Image"
            class="size-full ml-auto object-contain"
            width=""
            height=""
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Subscribe Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our Newsletter"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlight Text",
      "default": "Get updates!"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Subscribe to receive special offers and updates."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email Placeholder",
      "default": "Your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Subscribe"
    }
  ]
}
{% endschema %}
