<div class="common-title {{class}} mb-5 lg:mb-12.5 text-center lg:text-start">
  {% if subtitle != blank %}
    <div class="{{ subtitle_class }} bg-white/6 border border-solid border-white/12 px-2.5 xl:px-5 py-2.5 text-xs md:text-base xl:text-lg text-wheading font-light rounded-full flex items-center gap-1">
          <span class="w-2 h-2 mr-1 rounded-full bg-wheading inline-block"></span> 
          <span class="-mb-[1.5px] mt-[1.5px]">{{ subtitle }}</span>
      </div>
  {% endif %}

  {% if title != blank %}
    <h2 class="title {{ title_class }} text-xl text-center lg:text-start  md:text-2xl xl:text-4xl font-semibold leading-normal text-heading mb-2">
      {{ title }}
    </h2>
  {% endif %}

  {% if desc != blank %}
    <p class="desc {{ desc_class }} text-para2 text-center lg:text-start text-sm md:text-lg xl:text-xl font-light leading-[160%] max-w-85 md:max-w-max mx-auto md:ms-0">{{ desc }}</p>
  {% endif %}
</div>