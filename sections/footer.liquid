<div class="footer font-poppins">
  <div class="container">
    <div class="flex items-start gap-15 justify-between">
       <div class="w-full md:w-1/2 lg:w-4/12">
          {% if section.settings.footer_logo %}
            <img src="{{ section.settings.footer_logo | img_url: '300x' }}" class="w-30 h-16 footer-logo mb-3" width="120" height="64" alt="{{ shop.name }}">
          {% else %}
            <h2 class="text-2xl font-bold mb-3">{{ shop.name }}</h2>
          {% endif %}
          
          {% if section.settings.footer_description != blank %}
            <p class="footer-para text-sm md:text-base font-medium text-gray mb-3 lg:mb-4">{{ section.settings.footer_description }}</p>
          {% endif %}
          
          {% if section.settings.address != blank %}
            <p class="location flex gap-2 text-sm md:text-base font-medium text-gray mb-3 lg:mb-4">
              <img src="{{ 'location-icon.svg' | asset_url }}" class="location-logo size-5 lg:size-6" width="20" height="20" alt="Location">
              {{ section.settings.address }}
            </p>
          {% endif %}
          
          {% if section.settings.email != blank %}
            <p class="mail flex gap-2 text-sm md:text-base font-medium text-gray mb-3 lg:mb-4">
              <img src="{{ 'mail-icon.svg' | asset_url }}" class="mail-logo size-5 lg:size-6" width="20" height="20" alt="Email">
              <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </p>
          {% endif %}
          
          {% if section.settings.phone != blank %}
            <p class="phone flex gap-2 text-sm md:text-base font-medium text-gray mb-3 lg:mb-4">
              <img src="{{ 'phone-icon.svg' | asset_url }}" class="phone-logo size-5 lg:size-6" width="20" height="20" alt="Phone">
              <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
            </p>
          {% endif %}
       </div>
       
       <div class="w-full md:w-1/2 lg:w-8/12">
          <div class="grid grid-cols-2 lg:grid-cols-3">
            <div class="footer-menu-items">
               <h6 class="text-lg lg:text-xl font-quicksand font-semibold mb-4 lg:mb-5">{{ section.settings.menu_title | default: 'Company' }}</h6>
               <ul>
                {% for link in linklists[section.settings.footer_menu].links %}
                  <li class="mb-3 lg:mb-4 group">
                    <a href="{{ link.url }}" class="text-sm md:text-base duration-300 text-gray group-hover:text-secondary">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
            
            <div class="footer-menu-items">
               <h6 class="text-lg lg:text-xl font-quicksand font-semibold mb-4 lg:mb-5">{{ section.settings.category_title | default: 'Category' }}</h6>
               <ul>
                {% for link in linklists[section.settings.category_menu].links %}
                  <li class="mb-3 lg:mb-4 group">
                    <a href="{{ link.url }}" class="text-sm md:text-base duration-300 text-gray group-hover:text-secondary">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
            
            <div class="footer-social-items">
               <h6 class="text-lg lg:text-xl font-quicksand font-semibold mb-4 lg:mb-5">{{ section.settings.social_title | default: 'Social' }}</h6>
              <div class="flex items-center gap-1">
                {% if section.settings.facebook_url != blank %}
                  <a href="{{ section.settings.facebook_url }}" target="_blank" class="size-8 lg:size-10 rounded-full bg-white border border-[#E1DFDF] hover:bg-secondary duration-300 flex items-center justify-center">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                  </a>
                {% endif %}
                
                {% if section.settings.twitter_url != blank %}
                  <a href="{{ section.settings.twitter_url }}" target="_blank" class="size-8 lg:size-10 rounded-full bg-white border border-[#E1DFDF] hover:bg-secondary duration-300 flex items-center justify-center">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                  </a>
                {% endif %}
                
                {% if section.settings.instagram_url != blank %}
                  <a href="{{ section.settings.instagram_url }}" target="_blank" class="size-8 lg:size-10 rounded-full bg-white border border-[#E1DFDF] hover:bg-secondary duration-300 flex items-center justify-center">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
       </div>
    </div>
  </div>
  <div class="bg-[#E9E9E9] w-full h-px mt-5 lg:mt-6"></div>
  <p class="text-center text-sm md:text-base font-bold font-poppins text-black py-4 lg:py-5">
    Â© {{ 'now' | date: '%Y' }} <span class="text-primary">{{ section.settings.company_name | default: shop.name }}</span>, All rights reserved.
  </p>
</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone"
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu Title",
      "default": "Company"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "category_title",
      "label": "Category Title",
      "default": "Category"
    },
    {
      "type": "link_list",
      "id": "category_menu",
      "label": "Category Menu"
    },
    {
      "type": "text",
      "id": "social_title",
      "label": "Social Title",
      "default": "Social"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "FoodTrove"
    }
  ]
}
{% endschema %}